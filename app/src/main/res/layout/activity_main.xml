<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff">

        <Button
            android:id="@+id/monthPrevious"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="PREV"
            android:textSize="12dp"
            android:background="#ffffffff"
            android:gravity="center"
            android:layout_toLeftOf="@+id/monthText"
            android:layout_toStartOf="@+id/monthText"
            android:layout_alignBottom="@+id/monthText" />

        <TextView
            android:id="@+id/monthText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="MonthView"
            android:textSize="18dp"
            android:textColor="#ff000000"/>

        <Button
            android:id="@+id/monthNext"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="NEXT"
            android:textSize="12dp"
            android:background="#ffffffff"
            android:gravity="center"
            android:layout_toRightOf="@+id/monthText"
            android:layout_toEndOf="@+id/monthText"
            android:layout_alignBottom="@+id/monthText" />
    </RelativeLayout>

    <com.hanssem.day8_test.CalendarMonthView
        android:id="@+id/monthView"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_weight="0.57" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/weathermImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp" />


        <Button
            android:id="@+id/getBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="날씨보기" />


    </LinearLayout>

</LinearLayout>